<form method="get">
    <select name="type">
        {{#each types}}
            <option value="{{this}}">{{displayName this}}</option>
        {{/each}}
    </select>
    <select name="element">
        <option value="">All</option>
        {{#each elements}}
            <option value="{{this}}">{{displayName this}}</option>
        {{/each}}
    </select>
    <button type="submit">Update</button>
</form>

<table id="weapons">
    <thead>
    <tr>
        <th>Type</th>
        <th>Name</th>
        <th>Slots</th>
        <th>Raw</th>
        <th>Element</th>
        <th>Affinity</th>
        <th>Sharpness</th>
        <th>Other</th>
    </tr>
    </thead>
    <tbody>
    {{#each weapons}}
        <tr>
            <td class="type"><img src="{{weaponImage weapon.type}}" height="40"></td>
            <td class="name">{{weapon.name}}</td>
            <td class="slots">{{slots weapon.slots}}</td>
            <td class="raw">{{weapon.raw}} ({{round raw}})</td>
            <td class="element">
                {{#each elements as |v k|}}
                    <img src="{{elementImage k}}" height="20"
                         style="vertical-align: bottom">
                    {{getKey weapon.elements k}} ({{round v}})<br>
                {{/each}}
            </td>
            <td class="affinity">{{weapon.affinity}}%</td>
            <td class="sharpness">
                {{#if sharpness}}
                    {{sharpnessSvg sharpness
                    red="#ff0000" orange="#ff9900" yellow="#ffff00"
                    green="#00ff00" blue="#0000ff" white="#e6e6e6"}}
                {{/if}}
            </td>
            <td class="other">
                {{#if weapon.shellType}}
                    <div>{{weapon.shellType}} {{weapon.shellLevel}}</div>
                {{/if}}
                {{#if weapon.phialType}}
                    <div>{{weapon.phialType}}</div>
                {{/if}}
                {{#if weapon.charges}}
                    <div>
                        {{#each weapon.charges}}
                            {{type}} {{level}}<br>
                        {{/each}}
                    </div>
                {{/if}}
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>